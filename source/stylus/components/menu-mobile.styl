.menu-burger
  display: inline-flex
  justify-content: center
  align-items: center
  flex-direction: column
  position: relative
  width: 30px
  height: 18px
  cursor: pointer
  z-index: 5

  +above($breakpoints.md)
    display: none

  &__line
    transition: all 0.3s ease 0s
    position: absolute
    width: 100%
    height: 2px
    background-color: $color-white

    &:first-child
      top: 0

    &:last-child
      bottom: 0

  &__mobile
    max-width: 320px
    padding: 21px 0px

  &__mobile-list
    color: $color-white
    letter-spacing: 0.1em
    font-family: "Montserrat"
    font-size: 12px
    line-height: 15px
    text-transform: uppercase

  &__mobile-item
    position: relative
    text-align: center
    margin-bottom: 35px
    box-shadow: 0px 0px 8px 3px #41aaa8
    padding: 5px
    border-radius: 21px
    top: 0
    justify-content: space-around
    z-index: 2
    transition: all 0.2s

    &:active
      top: 2px
  &__mobile-phone,
  &__mobile-description
    color: $color-white
    font-size: 12px
    line-height: 15px
    letter-spacing: 0.1em

.menu-burger.active .menu-burger__line
  &:first-child
    transform: rotate(45deg)
    top: 8px

  &:last-child
    transform: rotate(-45deg)
    bottom: 8px

.menu-burger.active .menu-burger__line--hidden
  transform: scale(0)

.open-menu
  transition: all 0.5s
  width: 61%
  top: 0
  right: 0
  height: 100%;
  background: RGBA(34,34,34,0.99)
  display: flex
  justify-content: space-between
  position: absolute
  padding: 20px
  z-index: 2

  +above($breakpoints.sm)
    width: 30%

  +above($breakpoints.md)
    display: none